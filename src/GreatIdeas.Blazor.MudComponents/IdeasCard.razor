@inherits IdeasCardBase

<MudItem xs="@xs" sm="@sm" md="@md" lg="@lg" xl="@xl" Class="@Class">
    <MudCard Elevation=2>
        <MudCardHeader>
            <CardHeaderContent>
                <MudItem>
                    <div class="d-flex align-center">
                        @if (ShowIcon)
                    {
                        <MudIcon Icon=@Icon Color="@Color" Size="Size.Medium" Class="mr-2"/>
                        <MudText Typo="Typo.h6" Color="@Color">@Title</MudText>
                    }
                    else
                    {
                        <MudText Typo="Typo.h6" Color="@Color">@Title</MudText>
                    }
                    </div>
                </MudItem>                
                <MudText Typo="Typo.body2">@SubTitle</MudText>                
            </CardHeaderContent>
            
            <CardHeaderActions>
                @HeaderActions
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            @Content
        </MudCardContent>
    </MudCard>
</MudItem>

